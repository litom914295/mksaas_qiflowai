# 管理后台环境变量配置
# 复制此文件为 .env.local 并填写实际值

# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/mksaas_admin"

# Redis配置（可选，用于缓存）
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# 认证配置
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# 管理后台配置
ADMIN_EMAIL="admin@example.com"
ADMIN_DEFAULT_PASSWORD="admin123456"

# 功能开关
ENABLE_ADMIN_PANEL="true"
ENABLE_AUDIT_LOG="true"
ENABLE_TWO_FACTOR_AUTH="false"

# 安全配置
SESSION_TIMEOUT_MINUTES="60"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION_MINUTES="30"

# 积分系统配置（已有）
ENABLE_CREDITS="true"
REGISTER_GIFT_CREDITS="70"
DAILY_SIGNIN_CREDITS="5"
REFERRAL_INVITER_CREDITS="15"
REFERRAL_INVITEE_CREDITS="20"
SHARE_REWARD_CREDITS="5"

# 风控配置
REFERRAL_DAILY_LIMIT="3"
REFERRAL_MONTHLY_LIMIT="40"
SHARE_DAILY_LIMIT="1"
SHARE_COOLDOWN_MINUTES="60"

# 日志级别
LOG_LEVEL="info"

# 监控配置（可选）
SENTRY_DSN=""
MONITORING_ENABLED="false"