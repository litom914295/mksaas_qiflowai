# Next.js 开发环境性能优化配置
# 复制此文件为 .env.development.local 并根据需要调整

# 禁用遥测以减少启动时间
NEXT_TELEMETRY_DISABLED=1

# 启用持久化缓存
NEXT_PRIVATE_LOCAL_WEBPACK=1

# 减少并发编译任务（根据你的 CPU 核心数调整，一般设置为核心数-1）
# UV_THREADPOOL_SIZE=8

# 禁用图片优化（开发环境可以禁用以加快速度）
DISABLE_IMAGE_OPTIMIZATION=true

# Node.js 内存优化（如果内存充足，可以增加）
NODE_OPTIONS=--max-old-space-size=8192

# 禁用 source map（开发环境可选）
# GENERATE_SOURCEMAP=false
