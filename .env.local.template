# ===================================
# Supabase 配置 (必需)
# 在 https://supabase.com/dashboard 创建项目后填写
# ===================================

# Supabase 项目 URL (格式: https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Supabase Anon Key (公开密钥)
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# Supabase Service Role Key (私密密钥，仅服务器端使用)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# 数据库连接字符串 - Direct Connection
# 格式: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?sslmode=require
DIRECT_DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?sslmode=require

# 数据库连接字符串 - Session Pooler (用于 Serverless)
# 格式: postgresql://postgres:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
SESSION_DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres

# 默认数据库连接（通常与 DIRECT_DATABASE_URL 相同）
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?sslmode=require

# ===================================
# 其他配置
# ===================================

# 基础 URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# 开发模式
NODE_ENV=development
