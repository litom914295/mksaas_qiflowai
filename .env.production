# 应用配置
NODE_ENV=production
PORT=3000
APP_URL=https://your-domain.com

# 数据库配置
DATABASE_URL=postgresql://qiflowai:your_password@postgres:5432/qiflowai_db
DB_USER=qiflowai
DB_PASSWORD=your_secure_password
DB_NAME=qiflowai_db
DB_HOST=postgres
DB_PORT=5432

# Redis配置
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# 认证配置
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret_key_at_least_32_chars
JWT_SECRET=your_jwt_secret_key

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_password
EMAIL_FROM=qiflowai <noreply@example.com>

# 存储配置
STORAGE_TYPE=s3  # local | s3
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_ENDPOINT=https://s3.amazonaws.com

# 支付配置
PAYMENT_PROVIDER=stripe  # stripe | alipay | wechat

# Stripe支付
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx

# 支付宝支付
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

# 微信支付
WECHAT_PAY_MCH_ID=your_wechat_mch_id
WECHAT_PAY_API_KEY=your_wechat_api_key
WECHAT_PAY_APP_ID=your_wechat_app_id
WECHAT_PAY_CERT_PATH=/app/certs/wechat_cert.pem

# 增长系统配置
GROWTH_ENABLED=true
REFERRAL_DEFAULT_REWARD=50
REFERRAL_SUCCESS_REWARD=100
SHARE_DEFAULT_REWARD=10
MAX_DAILY_EARN_CREDITS=500
CREDITS_EXCHANGE_RATE=100  # 100积分=1元

# 风控配置
FRAUD_DETECTION_ENABLED=true
MAX_REFERRALS_PER_DAY=10
MAX_SHARES_PER_DAY=20
SUSPICIOUS_THRESHOLD=0.7
AUTO_BAN_THRESHOLD=0.9

# 监控配置
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx
SENTRY_ENVIRONMENT=production
LOG_LEVEL=info
METRICS_ENABLED=true

# API限流
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000  # 1分钟（毫秒）
RATE_LIMIT_MAX_REQUESTS=100

# CDN配置
CDN_URL=https://cdn.your-domain.com
CDN_ENABLED=true

# 安全配置
CORS_ORIGIN=https://your-domain.com
CSP_ENABLED=true
SECURE_COOKIES=true
SESSION_SECRET=your_session_secret_key

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# 功能开关
FEATURE_REGISTRATION_ENABLED=true
FEATURE_SOCIAL_LOGIN_ENABLED=true
FEATURE_TWO_FACTOR_AUTH_ENABLED=true
FEATURE_API_ENABLED=true
MAINTENANCE_MODE=false